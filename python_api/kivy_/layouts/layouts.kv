GridLayoutSamples:


<BoxLayoutSamples>:
    orientation: "horizontal"
    spacing: "10dp"  # padding around buttons
    Button:
        text: "A" 
    Button:
        text: "B"
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp" 
        Button:
            text: "C"
        Button:
            text: "D"
        Button:
            text: "E"     
    Button:
        text: "F"


<AnchorLayoutSamples>:
	anchor_x: "center" #right, left, center
	anchor_y: "top" #bottom, top, center
	BoxLayout:
    	size_hint: .2, .2
    	Button:
    		text: "A"
    	Button:
    		text: "B"

    		
<GridLayoutSamples>:
