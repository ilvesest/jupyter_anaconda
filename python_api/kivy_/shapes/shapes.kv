<Canvas1>:
    canvas:
        Rectangle: 
            pos: self.center_x - s/2, self.center_y - s/2
            size: s, s
        Ellipse:
            pos: 200, 500
            size: s, s/2
        Line:
            #points: (0, 0, 100, 100, 200, 0, 300, 100, self.width, self.height)
            
            # to break at new line omit ( )
            points: 
                0, 0, self.width / 4, 100, self.width / 2, 0, \
                self.width*3/4, 100, self.width, 0
            width: 4
            
